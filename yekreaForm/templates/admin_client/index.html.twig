                    </td>
                <td>{{ client.societe }}</td>
                <td>0{{ client.telephone }}</td>
                <td>{{ client.Reseaux }}</td>
                <td>
                    <a href="{{ path('app_admin_client_show', {'id': client.id}) }}">show</a>
