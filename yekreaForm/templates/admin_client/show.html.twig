{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>
                    {% if client.user %}
                            {{client.user.nom}}
                        {% else %}
                            NR
                        {% endif %}
                </td>

            </tr>

            <tr>
                <th>Prenom</th>
                <td>
                    {% if client.user %}
                        {{client.user.prenom}}
                    {% else %}
                        NR
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Email</th>
                <td>
                    {% if client.user %}
                        {{client.user.email}}
                    {% else %}
                        NR
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ client.societe }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ client.telephone }}</td>
            </tr>
            <tr>
                <th>Reseaux</th>
                <td>{{ client.Reseaux }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('app_admin_client_index') }}">back to list</a>

    <a href="{{ path('app_admin_client_edit', {'id': client.id}) }}">edit</a>

    {{ include('admin_client/_delete_form.html.twig') }}
{% endblock %}
