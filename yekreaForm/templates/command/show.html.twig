{% extends 'base.html.twig' %}

{% block title %}Command{% endblock %}

{% block body %}
    <h1>Command</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ command.createDate ? command.createDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>NbCommande</th>
                <td>{{ command.nbCommande }}</td>
            </tr>
            <tr>
                <th>ValidationDate</th>
                <td>{{ command.validationDate ? command.validationDate|date('Y-m-d') : 'En attente' }}</td>
            </tr>
            <tr>
                <th>Prestataire</th>
                <td>{{ command.user ? command.user.nom ~ ' ' ~ command.user.prenom : '' }} </td>
            </tr>
            <tr>
                <th>Client</th>
                <td>
                    {% if command.client %}
                        
                        {% if command.client.user %}
                            {{command.client.user.nom ~ ' ' ~ command.client.user.prenom}}
                        {% endif %}
                        
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_command_index') }}">back to list</a>

    <a href="{{ path('app_command_edit', {'id': command.id}) }}">edit</a>

    {{ include('command/_delete_form.html.twig') }}
{% endblock %}
