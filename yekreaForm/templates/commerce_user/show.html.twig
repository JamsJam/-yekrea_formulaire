{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="title">Utilisateur</h1>

    <button class="btn btn-primary mt-4 mb-4"><a href="{{ path('app_commerce_user_index') }}">Retour</a></button>

    <div class="containerCard">
        <div class="card shadow p-3 mb-2 bg-light " style=" width: 40rem;">
            <div class="card-body" >
                <h5 class="card-title">Nom : {{ user.nom|upper}} <br> Prénom : {{ user.prenom|capitalize}}</h5>
                <p class="card-text">Id : {{ user.id }}</p>
                <p class="card-text">Email : {{ user.email }}</p>
                <p class="card-text">Rôle : {{ user.roles ? user.roles|json_encode : '' }}</p>
                
                <div class="updateDelete" style="display:flex;flex-direction:row; justify-content:space-around;">
                    {{ include('commerce_user/_delete_form.html.twig') }}
                    <button class="btn btn-success">
                        <a href="{{ path('app_commerce_user_edit', {'id': user.id}) }}" >Modifier</a>
                    </button>
                </div>
        </div>
    </div>
    </div>

{% endblock %}
