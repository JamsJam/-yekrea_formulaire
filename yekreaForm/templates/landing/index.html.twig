{% extends 'base.html.twig' %}

{% block title %}{{parent()}}Accueil{% endblock %}

{% block stylesheets %}
    <style>

        body{
            background-color: #e5191e;
            
        }

        #landing__container a,
        #landing__container h1{
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        }

        #landing__container{
            background-color: white;
            min-height: 100vh;
            max-width: 1010px;
            margin: 0 auto;
            box-shadow: 0px 0px 4px 7px #ffffff, 
                        0px 0px 11px 24px #ad1216;
        }

        #landing__title{
            text-align:center;
            padding-top: 20px;
        }

        #landing__container--user,
        #landing__container--admin
        {
            width: 90vw;
            min-width: 455px;
            max-width: 1000px;
            margin: 50px auto;
            display:flex;
            align-items:center;
            justify-content:space-around;
            
        }

        #landing__container--user,
        #landing__container--admin
        {
            width: 90vw;
            min-width: 300px;
            max-width: 1000px;
            margin: 50px auto;
            display:flex;
            align-items:center;
            justify-content:space-around;
        }

        .landing__pageBloc{
            background-color: #e5191e;
            height:200px;
            width:200px;
            border-radius: 20px;
            display:flex;
            align-items:center;
            justify-content:center;
            transition: color 0.3s ease, background-color 0.3s ease
        }
        .landing__pageBloc a{
            text-decoration:none;
            color : white;

        }
        .landing__pageBloc:hover{
            background-color: black;
            
        }
        .landing__pageBloc:hover a{
            /* color: black; */
            
        }

        @media screen and (max-width:680px) {
            #landing__container--user,
            #landing__container--admin
            {
                width:100vw;
                /* flex-wrap: wrap; */
                flex-direction: column;
            }
            
            .landing__pageBloc{
                height:150px;
                width:150px;
                margin: 10px 0;
            }

        }

    </style>
{% endblock %}

{% block body %}
    <div id="landing__container">

        <h1 id="landing__title">Bienvenue {{app.user.nom}}</h1>

        <div id="landing__container--admin">
            <div class="landing__pageBloc">
                <a href="#">Gestion User</a>
            </div>

            <div class="landing__pageBloc">
                <a href="#">Gestion des Client</a>
            </div>
        </div>
        <div id="landing__container--user">
            <div class="landing__pageBloc">
                <a href="#">Nouveau Client</a>
            </div>
            <div class="landing__pageBloc">
                <a href="#">Nouvelle Commande</a>
            </div>
            <div class="landing__pageBloc">
                <a href="#">Historique</a>
            </div>
        </div>
    </div>
{% endblock %}
