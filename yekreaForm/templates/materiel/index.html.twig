{% extends 'base.html.twig' %}

{% block title %}Matériel {% endblock %}

{% block body %}
    <div class="containerPages">
        <h1 class="title">Matériels </h1>

    <button type="button btnServices" class="btn btn-success mb-4"> <a href="{{ path('app_materiel_new') }}">Ajouter un nouveau matériel</a></button>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col">Prix</th>
                <th scope="col">Voir</th>
                <th scope="col">Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for materiel in materiels %}
            <tr>
                <td>{{ materiel.id }}</td>
                <td>{{ materiel.nom }}</td>
                <td>{{ materiel.prix }}€</td>
                <td>
                    <button type="button" class="btn btn-warning"><a href="{{ path('app_materiel_show', {'id': materiel.id}) }}">Voir</a></button>
                
                </td>
                <td>
                    <button type="button" class="btn btn-primary"><a href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Modifier</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    
{% endblock %}
