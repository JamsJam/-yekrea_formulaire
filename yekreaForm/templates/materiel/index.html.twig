{% extends 'base.html.twig' %}

{% block title %}Matériel {% endblock %}

{% block body %}
    <div class="containerPages">

        <div class="pages">
        
            <h1 class="title">Matériels </h1>

            <a class="btn btn-success mb-4" href="{{ path('app_materiel_new') }}">
                Ajouter un nouveau matériel
            </a>
            
            <div class="table-responsive-sm">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Prix</th>
                            <th scope="col">Voir</th>
                            <th scope="col">Modifier</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for materiel in materiels %}
                        <tr>
                            <td>{{ materiel.id }}</td>
                            <td>{{ materiel.nom }}</td>
                            <td>{{ materiel.prix }}€</td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('app_materiel_show', {'id': materiel.id}) }}">Voir</a>
                            
                            </td>
                            <td>
                                <a class="btn btn-primary"href="{{ path('app_materiel_edit', {'id': materiel.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            
        </div>
        
    </div>

    
{% endblock %}
