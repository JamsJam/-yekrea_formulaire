{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{# PAGE POUR AFFICHER TOUS LES SERVICES #}

{% block body %}
    <div class="containerPages">
        
        <div class="pages">
            <h1 class="title" >Services</h1>

            <a class="btn btn-success mb-4" href="{{ path('app_services_new') }}">Ajouter un nouveau service</a>

            <div class="table-responsive-sm">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Voir</th>
                            <th scope="col">Modifier</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for service in services %}
                        <tr class="table-striped">
                            <td>{{ service.id }}</td>
                            <td>{{ service.nom }}</td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('app_services_show', {'id': service.id}) }}">Voir</a>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="{{ path('app_services_edit', {'id': service.id}) }}">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
{% endblock %}
