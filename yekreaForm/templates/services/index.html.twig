{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{# PAGE POUR AFFICHER TOUS LES SERVICES #}

{% block body %}
    <div class="containerPages">
        <h1 class="title" >Services</h1>

        <button type="button btnServices" class="btn btn-success mb-4"> <a href="{{ path('app_services_new') }}">Ajouter un nouveau service</a>

        </button>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Voir</th>
                    <th scope="col">Modifier</th>
                </tr>
            </thead>
            <tbody>
            {% for service in services %}
                <tr class="table-striped">
                    <td>{{ service.id }}</td>
                    <td>{{ service.nom }}</td>
                    <td>
                        <button type="button" class="btn btn-warning"><a href="{{ path('app_services_show', {'id': service.id}) }}">Voir</a></button>    
                    </td>
                    <td>
                        <button type="button" class="btn btn-primary"><a href="{{ path('app_services_edit', {'id': service.id}) }}">Editer</a></button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        
    </div>
{% endblock %}
