{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{# PAGE POUR AFFICHER TOUS LES SERVICES #}

{% block body %}
    <div class="containerPages">
        
        <div class="pages">
            <h1 class="title" >Services</h1>

            {# BOUTON pour ajouter un nouveau SERVICE #}
                <a class="btn bouton mb-4" href="{{ path('app_services_new') }}">Ajouter un nouveau service</a> 
           

            <div class="table-responsive-sm">
                <table class="table mb-5 tableau">
                    <thead>
                        <tr>
                            {# <th>Id</th> #}
                            <th class="col-3">Nom</th>
                            <th style="background-color:transparent !important; "></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for service in services %}
                        <tr>
                            {# ID du SERVICE
                                <td>{{ service.id }}</td> 
                            #}
                            <td>{{ service.nom }}</td>
                            {# 
                                Menu déroulant pour VOIR / MODIFIER /SUPPRIMER 
                                col: taille de la colonne
                                dropdown-center : centre le dropdown
                            #}
                            <td class="col-1" >
                                <div class="dropdown-center"  >

                                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        {# 
                                            Icones bootstrap "..." 
                                            width & height : pour changer la taille
                                            fill : pour changer la couleur ( couleur bootstap / couleur hexadecimal / couleur écrite ex: "red")
                                        #}
                                        <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="#D6D6D6" class="bi bi-three-dots" viewBox="0 0 16 16">
                                            <path d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
                                        </svg>
                                    </button>

                                    <ul class="dropdown-menu">
                                        {# VOIR le service sélectionner (:/services/show.html.twig) #}
                                        <li><a class="dropdown-item" href="{{ path('app_services_show', {'id': service.id}) }}">Voir</a></li>
                                        {# MODIFIER le service sélectionner (:/services/edit.html.twig) #}
                                        <li><a class="dropdown-item" href="{{ path('app_services_edit', {'id': service.id}) }}">Modifier</a></li>
                                        {# SUPPRIMER le service sélectionner (:/services/_delete_form.html.twig) #}
                                        <li><a class="dropdown-item" href="{{ path('app_services_delete', {'id': service.id}) }}">Supprimer</a></li>
                                    </ul>
                                </div>
                            </td>
                            
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        
    </div>
{% endblock %}
