{% extends 'base.html.twig' %}

{% block title %}Services{% endblock %}

{% block body %}
    <h1 class="title">Services</h1>

    <button class="btn btn-primary t-4 mb-4"><a href="{{ path('app_services_index') }}">Retour</a></button>
    <div class="containerPages">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    
                </tr>
                <tr>
                    <td>{{ service.id }}</td>
                    <td>{{ service.nom }}</td>
                </tr>
            </tbody>
        </table>
        <div class="updateDelete" style="display:flex;flex-direction:row; justify-content:space-around;">
            {{ include('services/_delete_form.html.twig') }}
            <button class="btn btn-success">
                <a href="{{ path('app_services_edit', {'id': service.id}) }}">Modifier</a>
            </button>
        </div>
    </div>

                

    
{% endblock %}
